{
    "manifest_version": 3,
    "name": "Website Cloner",
    "version": "1.0",
    "description": "Clone complete website structure including HTML, CSS, JS and images",
    "permissions": [
      "activeTab",
      "downloads",
      "scripting",
      "storage"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.jpg"
    },
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [{
      "resources": ["jszip.min.js"],
      "matches": ["<all_urls>"]
    }],
    "icons": {
      "128": "icon.jpg"
    }
}
  